#:kivy 1.9.0

<SpawningScreen>:
    angle: 0
    shot: turret_shot

    Shot:
        id: turret_shot
        source: 'atlas://turret/shot'
        allow_stretch: True
        size: 8, 8

    Image:
        source: 'atlas://turret/barrel'
        allow_stretch: True
        size: 64, 64
        center: root.width / 2, 30
        canvas.before:
            PushMatrix
            Rotate:
                angle: root.angle
                origin: root.width / 2, 0
        canvas.after:
            PopMatrix

    Image:
        source: 'atlas://turret/turret'
        allow_stretch: True
        size: 64, 64
        center: root.width / 2, 32
